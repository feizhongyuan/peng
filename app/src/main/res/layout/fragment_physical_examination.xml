                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/name_zhuanjiadingzhijilu"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/rl_dingzhi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_below="@id/rl_dingzhitijian"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/shape1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_zijidingzhi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/img_zijitu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/dingdan_01" />

                        <TextView
                            android:id="@+id/tv_zijiDIY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_toRightOf="@id/img_zijitu"
                            android:text="DIY"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_zijidingzhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_zijiDIY"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/img_zijitu"
                            android:text="@string/name_zijidingzhi" />

                        <View
                            android:layout_width="@dimen/dp_0_1"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/black" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_zhuanjia"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_zhuanjiatu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/dingdan_02" />
                        <ImageView
                            android:id="@+id/img_zhuanjiaVIP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/dingdan_02"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_15"
                            />

                        <TextView
                            android:id="@+id/tv_1dui1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_toRightOf="@id/img_zhuanjiatu"
                            android:text="1对1"
                            android:textSize="@dimen/sp_15" />

