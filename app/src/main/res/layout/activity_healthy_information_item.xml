"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/black"
            android:layout_below="@id/rl_content"
            />

        <!--文章评论区-->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_pinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/wenzhangpinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_wenzhangpinglun"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_wenzhangpinglun_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(XX)"
                android:layout_toRightOf="@id/wenzhangpinglun"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecycler_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wenzhangpinglun"
                android:layout_marginBottom="@dimen/dp_45"
                >

            </android.support.v7.widget.RecyclerView>

        </com.zhy.autolayout.AutoRelativeLayout>



        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/img_information_back"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/fanhui"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/et_information_pinglun"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:hint="我也说两句"
            android:background="@drawable/shape1"
            android:padding="@dimen/dp_5"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/img_information_message"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/fenxiang"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <ImageView
            android:id="@+id/img_information_collection"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/fenxiang"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
        <ImageView
            android:id="@+id/img_information_share"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/fenxiang"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
