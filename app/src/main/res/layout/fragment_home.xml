<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.maqueezu.el.ui.fragment.HomeFragment">

   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true"
       >
       <com.zhy.autolayout.AutoRelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <com.zhy.autolayout.AutoRelativeLayout
               android:id="@+id/rl_base_1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true">

               <com.zhy.autolayout.AutoRelativeLayout
                   android:id="@+id/rl_item_waterripple"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="@dimen/dp_20">

                   <include
                       layout="@layout/item_waterripple"
                       android:layout_width="@dimen/dp_160"
                       android:layout_height="@dimen/dp_160" />
               </com.zhy.autolayout.AutoRelativeLayout>

               <TextView
                   android:id="@+id/tv_weather_temperature"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_15"
                   android:text="13℃" />

               <ImageView
                   android:id="@+id/img_weather_image"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/tv_weather_temperature"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_5"
                   android:src="@mipmap/touxiang_nan" />

               <ImageView
                   android:id="@+id/img_signIn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_10"
                   android:src="@mipmap/touxiang_nan" />

               <TextView
                   android:id="@+id/tv_guizeshuoming"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginBottom="@dimen/dp_15"
                   android:layout_marginRight="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_150"
                   android:drawableLeft="@mipmap/yiwen2x"
                   android:text="@string/name_guizeshuoming" />
               <!--任务、订单-->
               <com.zhy.autolayout.AutoLinearLayout
                   android:id="@+id/rl_pingjia"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_60"
                   android:layout_below="@id/tv_guizeshuoming"
                   android:layout_centerHorizontal="true"
                   android:layout_marginLeft="@dimen/dp_50"
                   android:background="@drawable/shape1"
                   android:orientation="horizontal"
                   android:weightSum="2">

                   <com.zhy.autolayout.AutoRelativeLayout
                       android:id="@+id/rl_renwu"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1">

                       <ImageView
                           android:id="@+id/img_renwutu"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="@dimen/dp_20"
                           android:src="@mipmap/dingdan_01" />

                       <TextView
                           android:id="@+id/tv_renwuxiang"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:layout_marginTop="@dimen/dp_10"
                           android:layout_toRightOf="@id/img_renwutu"
                           android:text="5"
                           android:textSize="@dimen/sp_15" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignBottom="@id/tv_renwuxiang"
                           android:layout_marginTop="@dimen/dp_15"
                           android:layout_toRightOf="@id/tv_renwuxiang"
                           android:text="项" />

                       <TextView
                           android:id="@+id/tv_renwukewancheng"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/tv_renwuxiang"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:layout_toRightOf="@id/img_renwutu"
                           android:text="@string/name_renwukewancheng" />

                       <View
                           android:layout_width="@dimen/dp_0_1"
                           android:layout_height="match_parent"
                           android:layout_alignParentRight="true"
                           android:background="@color/black" />
                   </com.zhy.autolayout.AutoRelativeLayout>

                   <com.zhy.autolayout.AutoRelativeLayout
                       android:id="@+id/rl_dingdan"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1">

                       <ImageView
                           android:id="@+id/img_dingdantu"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginLeft="@dimen/dp_20"
                           android:src="@mipmap/dingdan_02" />

                       <TextView
                           android:id="@+id/tv_dingdanxiang"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:layout_marginTop="@dimen/dp_10"
                           android:layout_toRightOf="@id/img_dingdantu"
                           android:text="3"
                           android:textSize="@dimen/sp_15" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignBottom="@id/tv_dingdanxiang"
                           android:layout_marginTop="@dimen/dp_15"
                           android:layout_toRightOf="@id/tv_dingdanxiang"
                           android:text="项" />

                       <TextView
                           android:id="@+id/tv_dingdankewancheng"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/tv_dingdanxiang"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:layout_toRightOf="@id/img_dingdantu"
                           android:text="@string/name_dingdankepingjia" />
                   </com.zhy.autolayout.AutoRelativeLayout>

               </com.zhy.autolayout.AutoLinearLayout>

               <!--麻雀币领取-->
               <ImageView
                   android:id="@+id/img_lingqumaquebi"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_100"
                   android:layout_below="@id/rl_pingjia"
                   android:layout_marginTop="@dimen/dp_5"
                   android:padding="@dimen/dp_10"
                   android:scaleType="fitXY"
                   android:src="@drawable/ic_launcher_background" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignTop="@id/img_lingqumaquebi"
                   android:padding="@dimen/dp_15"
                   android:text="@string/name_lingqumaquebi"
                   android:textSize="@dimen/sp_16"
                   android:textStyle="bold" />

           </com.zhy.autolayout.AutoRelativeLayout>

           <!--医疗服务-->
           <com.zhy.autolayout.AutoRelativeLayout
               android:id="@+id/rl_base_2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/rl_base_1"
               >
               <com.zhy.autolayout.AutoRelativeLayout
                   android:id="@+id/rl_yiliaofuwu"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_40">
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_0_1"
                       android:background="@color/black"/>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_0_1"
                       android:background="@color/black"
                       android:layout_alignParentBottom="true"
                       />
                   <android.support.design.widget.TabLayout
                       android:id="@+id/tab_yiliaofuwu"
                       android:layout_width="match_parent"
                       android:layout_height="?attr/actionBarSize"
                       android:layout_gravity="top"
                       android:background="#ffffff"
                       android:fillViewport="false"
                       android:isScrollContainer="true"
                       app:tabMode="fixed"
                       app:layout_scrollFlags="scroll"
                       app:tabIndicatorHeight="@null"
                       app:tabIndicatorColor="@color/colorAccent"
                       app:tabSelectedTextColor="@color/colorAccent"
                       app:tabTextColor="#ced0d3"
                       >
                       <!--app:tabIndicatorHeight="2.0dp"-->


                   </android.support.design.widget.TabLayout>
                   <!--<TextView-->
                       <!--android:id="@+id/tv_yiliaofuwu_title"-->
                       <!--android:layout_width="wrap_content"-->
                       <!--android:layout_height="wrap_content"-->
                       <!--android:text="@string/name_yiliaofuwu"-->
                       <!--android:textColor="@color/ref_red"-->
                       <!--android:textStyle="bold"-->
                       <!--android:textSize="@dimen/sp_16"-->
                       <!--android:layout_marginLeft="@dimen/dp_10"-->
                       <!--android:layout_centerVertical="true"/>-->
                   <!--<TextView-->
                       <!--android:layout_width="wrap_content"-->
                       <!--android:layout_height="wrap_content"-->
                       <!--android:text="@string/name_yiliaofuwu_jieshao"-->
                       <!--android:textColor="@color/ref_red"-->
                       <!--android:textSize="@dimen/sp_10"-->
                       <!--android:layout_centerVertical="true"-->
                       <!--android:layout_toRightOf="@id/tv_yiliaofuwu_title"-->
                       <!--/>-->
               </com.zhy.autolayout.AutoRelativeLayout>

               <!--<HorizontalScrollView-->
                   <!--android:layout_width="wrap_content"-->
                   <!--android:layout_height="wrap_content"-->
                   <!--android:layout_below="@+id/rl_yiliaofuwu"-->
                   <!--&gt;-->
                   <!--<LinearLayout-->
                       <!--android:layout_width="wrap_content"-->
                       <!--android:layout_height="wrap_content"-->
                       <!--android:orientation="vertical">-->
                       <!--<GridView-->
                           <!--android:id="@+id/mGridView_yiliaofuwu"-->
                           <!--android:layout_width="wrap_content"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:gravity="center"-->
                           <!--android:numColumns="auto_fit"-->
                           <!--android:stretchMode="spacingWidthUniform"></GridView>-->
                   <!--</LinearLayout>-->
               <!--</HorizontalScrollView>-->
               <android.support.v4.view.ViewPager
                   android:id="@+id/view_pager_yiliaofuwu"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_150"
                   android:layout_below="@id/rl_yiliaofuwu"
                   >

               </android.support.v4.view.ViewPager>

           </com.zhy.autolayout.AutoRelativeLayout>


           <!--健康商品-->
       <com.zhy.autolayout.AutoRelativeLayout
           android:id="@+id/rl_base_3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/rl_base_2"
           android:layout_marginTop="@dimen/dp_12">

           <com.zhy.autolayout.AutoRelativeLayout
               android:id="@+id/rl_jiankanglan"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40">
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_0_1"
                   android:background="@color/black"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_0_1"
                   android:background="@color/black"
                   android:layout_alignParentBottom="true"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/name_jiankangshangpin"
                   android:textStyle="bold"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:id="@+id/mTv_gengduo_jiankangshangpin"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/name_gegnduo"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:drawableRight="@mipmap/jiantou"
                   android:layout_marginRight="@dimen/dp_10"
                   />
           </com.zhy.autolayout.AutoRelativeLayout>

           <HorizontalScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/rl_jiankanglan"
               tools:ignore="NewApi">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <GridView
                       android:id="@+id/mGridView_jiankangshangpin"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:numColumns="auto_fit"
                       android:stretchMode="spacingWidthUniform"></GridView>
               </LinearLayout>
           </HorizontalScrollView>



       </com.zhy.autolayout.AutoRelativeLayout>

        <!--健康资讯-->
       <com.zhy.autolayout.AutoRelativeLayout
           android:id="@+id/rl_base_4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/rl_base_3"
           >
           <com.zhy.autolayout.AutoRelativeLayout
               android:id="@+id/rl_jiankangzixunlan"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40">
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_0_1"
                   android:background="@color/black"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_0_1"
                   android:background="@color/black"
                   android:layout_alignParentBottom="true"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/name_jiankangzixun"
                   android:textStyle="bold"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_centerVertical="true"/>
           </com.zhy.autolayout.AutoRelativeLayout>

           <!-- tabIndicatorColor：指示器颜色-->
           <!-- tabTextColor：  tab栏字体颜色-->
           <!-- tabSelectedTextColor：tab栏字体被选颜色-->
           <!--app:tabIndicatorColor    指示器颜色-->
           <!--app:tabTextColor         tab栏字体颜色-->
           <!--app:tabSelectedTextColor tab栏字体被选颜色-->
           <!--app:tabIndicatorHeight   指示器高度-->
           <!--app:tabBackground        tab背景颜色-->
           <!--app:tabMaxWidth          tab栏最大宽度-->
           <!--app:tabTextAppearance    tab栏字体样式-->
           <!--app:tabMinWidth          tab栏最小-->
           <!--
           app:tabMode="";有scrollable和fixed两个属性值
            scrollable:可滑动;
            fixed:不能滑动，平分tabLayout宽度;

            app:tabGravity="";有center和fill两个属性值
            fill:tabs平均填充整个宽度;
            center:tab居中显示;-->
           <android.support.design.widget.TabLayout
               android:id="@+id/tab_toolbar_jiankangzixun"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               android:layout_below="@id/rl_jiankangzixunlan"
               android:layout_gravity="top"
               android:background="#ffffff"
               android:fillViewport="false"
               android:isScrollContainer="true"
               app:tabMode="scrollable"
               app:layout_scrollFlags="scroll"
               app:tabIndicatorColor="@color/colorAccent"
               app:tabIndicatorHeight="2.0dp"
               app:tabSelectedTextColor="@color/colorAccent"
               app:tabTextColor="#ced0d3"
               >
               <!--<android.support.design.widget.TabItem-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="match_parent"-->
                   <!--android:text="a" />-->

           </android.support.design.widget.TabLayout>

           <android.support.v4.view.ViewPager
               android:id="@+id/view_pager_jiankangzixun"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_500"
               android:layout_below="@id/tab_toolbar_jiankangzixun"
               android:layout_marginBottom="@dimen/dp_10"
               />

       </com.zhy.autolayout.AutoRelativeLayout>





       </com.zhy.autolayout.AutoRelativeLayout>
   </android.support.v4.widget.NestedScrollView>

</com.zhy.autolayout.AutoRelativeLayout>
