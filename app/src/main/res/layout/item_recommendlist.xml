<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/img_taocan_tu"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_taocan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="套餐AAAAAAAAAAA"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/img_taocan_tu"
            android:layout_alignTop="@id/img_taocan_tu"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_taocan_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥888"
            android:textColor="@color/ref_red"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_taocan_tu"
            android:layout_below="@id/tv_taocan_title"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_taocan_jigou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  XX体检机构"
            android:drawableLeft="@mipmap/dangan"
            android:layout_toRightOf="@id/img_taocan_tu"
            android:layout_alignBottom="@id/img_taocan_tu"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
