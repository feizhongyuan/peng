<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maqueezu.el.ui.activity.child.shopping_child.GoodsDetailActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_goodsDetail_item_tu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_base_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_goodsDetail_item_tu"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/tv_goodsDetail_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="[AAAAA]XXXXXX商品名称"
                    android:layout_marginLeft="@dimen/dp_6"
                    />
                <TextView
                    android:id="@+id/tv_goodsDetail_item_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goodsDetail_item_title"
                    android:text="副标题"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/tv_goodsDetail_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goodsDetail_item_title1"
                    android:text="￥999～￥1888"
                    android:textColor="@color/ref_red"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_goodsDetail_item_express"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goodsDetail_item_title1"
                    android:text="快递:0.00"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:id="@+id/tv_goodsDetail_item_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goodsDetail_item_price"
                    android:text="@string/name_shichangjia"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_goodsDetail_item_marketPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goodsDetail_item_price"
                    android:layout_toRightOf="@id/tv_goodsDetail_item_market"
                    android:text="￥999～￥1888"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/tv_goodsDetail_item_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goodsDetail_item_price"
                    android:text="已售XXX"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/tv_goodsDetail_item_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goodsDetail_item_market"
                    android:text="麻雀优品自营店"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_base_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_goodsDetail_item_note"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    >
                    <TextView
                        android:id="@+id/tv_goodsDetail_item_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选：瓶装、西瓜味"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/img_goodsDetail_item_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fanhui"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_base_xiangqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_base_1"
                >
                <ImageView
                    android:id="@+id/img_goodsDetail_item_xiangqing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300"
                    android:src="@mipmap/ic_launcher"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_toolTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_base_xiangqing"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >
                <TextView
                    android:id="@+id/wenxintishi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_wenxintishi"
                    android:drawableLeft="@mipmap/zhifu"
                    />
                <TextView
                    android:id="@+id/wenxintishi_xiangqing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wenxintishi"
                    android:text="@string/name_wenxintishi_xiangqing"
                    />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_base_shangpinpingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_toolTips"
                android:background="@color/huise"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                >

                <TextView
                    android:id="@+id/tv_shangpinpingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_shangpinpingjia"
                    android:padding="@dimen/dp_5"
                    />

                <TextView
                    android:id="@+id/tv_shangpinpingjialv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="99.9%好评   "
                    android:drawableRight="@mipmap/baogao"
                    android:layout_marginTop="@dimen/dp_5"
                    />


            </com.zhy.autolayout.AutoRelativeLayout>

            <!--底部栏-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_base_shangpinpingjia"
                android:weightSum="7"
                >
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/rL_base_kefu"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/img_goodsDetail_item_kefu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tab_physical_selector"
                        />
                    <TextView
                        android:id="@+id/tv_goodsDetail_item_kefu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_kefu"
                        android:layout_marginTop="@dimen/dp_5"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <View
                    android:layout_width="@dimen/dp_0_1"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/rL_base_shoucang"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/img_goodsDetail_item_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tab_healthy_selector"
                        />
                    <TextView
                        android:id="@+id/tv_goodsDetail_item_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_shoucang"
                        android:layout_marginTop="@dimen/dp_5"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <View
                    android:layout_width="@dimen/dp_0_1"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/rL_base_gouwuche"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/img_goodsDetail_item_gouwuche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tab_physical_selector"
                        />
                    <TextView
                        android:id="@+id/tv_goodsDetail_item_gouwuche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_gouwuche"
                        android:layout_marginTop="@dimen/dp_5"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <View
                    android:layout_width="@dimen/dp_0_1"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_base_addShoppingCart"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/huise"
                    >
                    <TextView
                        android:id="@+id/tv_goodsDetail_item_addShoppingCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_jiarugouwuche"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/sp_15"
                        />

                </com.zhy.autolayout.AutoRelativeLayout>
                <View
                    android:layout_width="@dimen/dp_0_1"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_base_buy"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/huise"
                    >
                    <TextView
                        android:id="@+id/tv_goodsDetail_item_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_lijigoumai"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/sp_15"
                        />

                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>




        </com.zhy.autolayout.AutoRelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_goodsDetail_item_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/fanhui"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                />
            <ImageView
                android:id="@+id/img_goodsDetail_item_share"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/fenxiang"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </FrameLayout>

</com.zhy.autolayout.AutoRelativeLayout>
