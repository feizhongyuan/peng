<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myattr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.maqueezu.el.ui.test.TestActivity">

    <com.maqueezu.utils.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myattr:title_value="@string/main_page"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/web_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="js与原生交互"
            />

        <Button
            android:id="@+id/request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP示例"
            />

        <Button
            android:id="@+id/list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="集合分页数据加载"
            />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <Button
            android:id="@+id/db_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据库使用"
            />

        <Button
            android:id="@+id/sharedPreferences_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简单保存数据"
            />
    </LinearLayout>

</LinearLayout>
