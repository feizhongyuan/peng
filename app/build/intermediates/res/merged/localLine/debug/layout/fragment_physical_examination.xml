<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maqueezu.el.ui.fragment.PhysicalExaminationFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_physical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:src="@drawable/ic_launcher_background"
                />
            <!--平台推荐-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_base_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_physical"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_pingtaituijian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"
                        android:layout_alignParentBottom="true"
                        />
                    <TextView
                        android:id="@+id/tv_pingtaituijian_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_pingtaituijian"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:weightSum="2"
                    android:layout_below="@id/rl_pingtaituijian"
                    >
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        >
                        <ImageView
                            android:id="@+id/img_tijiantaocan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/tv_tijiantaocao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_tijiantaocan"
                            android:layout_centerHorizontal="true"
                            />
                    </com.zhy.autolayout.AutoRelativeLayout>
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10">
                        <ImageView
                            android:id="@+id/img_tijianjigou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/tv_tijianjigou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_tijianjigou"
                            android:layout_centerHorizontal="true"
                            />
                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <!--体检卡-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_base_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_base_1"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_tijianka"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"
                        android:layout_alignParentBottom="true"
                        />
                    <TextView
                        android:id="@+id/tv_tijianka_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_tijianka"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/mTv_tijianka_lijibangka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_lijibangka"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_tijianka"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <GridView
                            android:id="@+id/mGridView_tijianka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:numColumns="auto_fit"
                            android:stretchMode="spacingWidthUniform"></GridView>
                    </LinearLayout>
                </HorizontalScrollView>

            </com.zhy.autolayout.AutoRelativeLayout>

            <!--定制体检-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_base_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_base_2"
                >
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_dingzhitijian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"
                        android:layout_alignParentBottom="true"
                        />
                    <TextView
                        android:id="@+id/tv_dingzhitijian_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_dingzhitijian"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"/>
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/rl_dingzhi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_below="@id/rl_dingzhitijian"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/shape1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_zijidingzhi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/img_zijitu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/dingdan_01" />

                        <TextView
                            android:id="@+id/tv_zijiDIY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_toRightOf="@id/img_zijitu"
                            android:text="DIY"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_zijidingzhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_zijiDIY"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/img_zijitu"
                            android:text="@string/name_zijidingzhi" />

                        <View
                            android:layout_width="@dimen/dp_0_1"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/black" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_zhuanjia"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_zhuanjiatu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/dingdan_02" />
                        <ImageView
                            android:id="@+id/img_zhuanjiaVIP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/dingdan_02"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_15"
                            />

                        <TextView
                            android:id="@+id/tv_1dui1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_toRightOf="@id/img_zhuanjiatu"
                            android:text="1对1"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_zhuanjiadingzhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_1dui1"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/img_zhuanjiatu"
                            android:text="@string/name_zhuanjiadingzhi" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <!--甄选套餐-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_base_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_base_3"
                android:layout_marginTop="@dimen/dp_12">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_zhenxuantaocan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_1"
                        android:background="@color/black"
                        android:layout_alignParentBottom="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_zhenxuantaocan"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/mTv_gengduo_zhenxuantaocan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_gegnduo"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/jiantou"
                        android:layout_marginRight="@dimen/dp_10"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/mRecycler_zhenxuantaocan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:stretchMode="spacingWidthUniform"
                            android:layout_below="@+id/rl_zhenxuantaocan"></android.support.v7.widget.RecyclerView>

            </com.zhy.autolayout.AutoRelativeLayout>











        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</com.zhy.autolayout.AutoRelativeLayout>
