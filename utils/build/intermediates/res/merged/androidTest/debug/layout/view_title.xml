<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_bk"
        android:background="@color/title_bk_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/back_layout"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/ripple_boderless"
            >

            <ImageView
                android:id="@+id/title_back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/white_back"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/title_shezhi_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shezhi2x"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/mText_Addr"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:text="@string/addr_name"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/white"
                android:drawableRight="@mipmap/jiantou_01"
                android:gravity="center"
                android:visibility="visible"
                />
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/title_buttn_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_image_buttn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/ripple_boderless"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/title_image_buttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiaoxi2x"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/ripple_boderless"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title_text_buttn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_height"
                android:background="@drawable/ripple_boderless"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/title_height"
            android:layout_marginRight="@dimen/title_height"
            android:background="@drawable/ripple_boderless"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="今日健康"
            android:textSize="@dimen/common_larger" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_ProductSearch"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:hint="商品名称"
            android:textColor="@color/huise"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_8"
            android:background="@color/white"
            android:drawableLeft="@mipmap/fanhui"
            android:visibility="gone"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/xiaoxi_background"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignRight="@id/title_image_buttn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/shape_circle"
            >
            <TextView
                android:id="@+id/tv_xiaoxi_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="99"
                android:includeFontPadding="false"
                android:textSize="@dimen/sp_10"
                android:gravity="center"
                android:visibility="visible"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
